<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= form_with model: @user, local: true do |f| %>
        <div class="from-group">
          <h4>Name</h4>
          <%= f.text_field :name %>
        </div>

        <div class="field">
          <h4>Image</h4>
          <%= f.attachment_field :profile_image %>
        </div>

         <div class="field">
          <h4>Introduction</h4>
          <%= f.text_area :introduction %>
        </div>

        <div class="actions">
           <%= f.submit "Update User" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>

