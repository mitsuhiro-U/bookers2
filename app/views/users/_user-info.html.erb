 <h2>User info</h2>
    <table class='table'>
      <tbody>
        <tr><%= attachment_image_tag user, :profile_image_id, :fill, 30, 30, fallback: "no_image.jpg" %><tr>
        <tr> <th>name</th> <th> <%= user.name %></th> </tr>
        <tr> <th>introduction</th> <th><%= user.introduction %></th> </tr>
      </tbody>
    </table>
  <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block mb-3", method: :get do %>
    <i class="fas fa-user-cog"></i>
  <% end %>