  <%= @book.errors.count %>error prohibited this obj from being saved:
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<div class="container px-5 px-sm-o">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/user-info', user: @user %>
      <%= render 'books/form', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h1>Books</h1>
      <table class='table table-hover table-invers'>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
        <% @books.each do |books| %>
          <tr>
            <td>
              <%= link_to user_path(books.user.id), method: :get do %>
                <%= attachment_image_tag books.user, :profile_image_id, :fill, 30, 30, fallback: "no_image.jpg" %>
              <% end %>
            </td>
        
            <td><%= link_to books.title, book_path(books) %></td>
           
            <td><%= books.body %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<footer>
  <div class="container">
    <div class="row">
      <div class="mx-auto mt-5">
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>