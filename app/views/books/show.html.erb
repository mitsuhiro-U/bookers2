<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/user-info', user: @user %>
      <%= render 'books/form', book: @book %>
    </div>

    <div class="col-md-8 offset-md-1">
    <h2>Book detail</h2>
    <table class="table">
      <tbody>
        <tr>
          
          <td>
            <%= link_to user_path(@book2.user), method: :get do %>
            <%= attachment_image_tag @book2.user, :profile_image_id, :fill, 30, 30, fallback: "no_image.jpg" %>
            <br>
            <%= @book2.user.name %>
            <% end %>
          </td>
          
          <td>
            <%= link_to book_path(@book2), method: :get do %>
              <%= @book2.title %>
            <% end %>
          </td>
          
          <td><%= @book2.body %></td>
          <% if @book2.user.id == current_user.id then %>
            <td><%= link_to "Edit", edit_book_path(@book2), class: 'btn btn-sm btn-success' %></td>
            <td><%= link_to "Destroy", book_path(@book2), class: 'btn btn-sm btn-danger', method: :delete, data: { confirm: '本当に消しますか？' } %></td>
          <% else %>
            <td></td>
            <td></td>
          <% end %>
        </tr>
      </tbody>
    </table>

    </div>
  </div>
</div>

<footer>
  <div class="container">
    <div class="row">
      <div class="mx-auto mt-5">
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>